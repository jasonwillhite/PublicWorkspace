@using USAbleLife.OrderManagement.Data.DataAccess
@model List<USAbleLife.OrderManagement.Data.DataAccess.Discount>
    
<div id="discountsDiv">
    <h2>Discounts</h2>
    <table>
        <tr>
            <th style="width: 155px">Selection</th>
            <th style="width: 155px">Name</th>
            <th style="width: 155px">Amount</th>
        </tr>
        @foreach (var discount in Model)
        {
            <tr>
                <td><input type="radio" name="discountRadio" value="" checked="@(discount.Id == -1 ? "checked" : null)" onclick="addDiscountToOrder(@discount.Id)" /></td>
                <td style="width: 155px">@discount.Name</td>
                @if (discount.Type == (int)DiscountType.FixedAmount)
                {
                    <td style="width: 155px">@($"${discount.Amount}")</td>
                }
                else
                {
                    <td style="width: 155px">@($"{discount.Amount} %")</td>
                }
            </tr>
        }
    </table>
</div>

